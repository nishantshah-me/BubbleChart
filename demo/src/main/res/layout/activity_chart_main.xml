<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ChartMainActivity">
    <com.ogaclejapan.arclayout.ArcLayout
        android:id="@id/arc_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/tumblr_grey"
        app:arc_origin="center"
        app:arc_radius="@dimen/layout_radius_small"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_one"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="64dp"
            app:cardBackgroundColor="#f00"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txt_title_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Equity"
                    />


                <TextView
                    android:id="@+id/txt_percentage_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14%"
                    />
            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_two"
            android:layout_width="100dp"
            app:cardBackgroundColor="#ff0"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="50dp"
            android:layout_toRightOf="@id/card_one"
            android:layout_toEndOf="@id/card_one">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txt_title_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


                <TextView
                    android:id="@+id/txt_percentage_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/card_three"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardBackgroundColor="#411"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/card_two"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="40dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txt_title_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


                <TextView
                    android:id="@+id/txt_percentage_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_four"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="#099"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="75dp"
            android:layout_below="@id/card_three"
            android:layout_toRightOf="@id/card_one"
            android:layout_toEndOf="@id/card_one">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txt_title_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/txt_percentage_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </com.ogaclejapan.arclayout.ArcLayout>

</LinearLayout>